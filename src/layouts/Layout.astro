---
import { ClientRouter } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";

import "@fontsource/manrope/500.css";
import "@fontsource/manrope/600.css";

const { title, description, footerMaxWidth } = Astro.props;

---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ClientRouter />
		<meta name="description" content={description} />
    <script is:inline id="adobe-fonts">
      (function(d) {
        var config = {
          kitId: 'ieb8mos',
          scriptTimeout: 3000,
          async: true
        },
        h=d.documentElement,t=setTimeout(function(){h.className=h.className.replace(/\bwf-loading\b/g,"")+" wf-inactive";},config.scriptTimeout),tk=d.createElement("script"),f=false,s=d.getElementsByTagName("script")[0],a;h.className+=" wf-loading";tk.src='https://use.typekit.net/'+config.kitId+'.js';tk.async=true;tk.onload=tk.onreadystatechange=function(){a=this.readyState;if(f||a&&a!="complete"&&a!="loaded")return;f=true;clearTimeout(t);try{Typekit.load(config)}catch(e){}};s.parentNode.insertBefore(tk,s)
      })(document);
    </script>
	</head>
	<body>
		<Header />
    <main>
      <slot />
    </main>
		<Footer maxWidth={footerMaxWidth}/>
	</body>
</html>

<script is:inline>
  if (typeof document !== 'undefined') {
    const FADE_OUT = 'page-fade-out';
    const FADE_IN = 'page-fade-in';

      // フェードアウトが完了してからローディングを開始
      document.addEventListener('astro:before-preparation', (event) => {
        // @ts-ignore – 型宣言を気にせず元のloaderを退避
        const originalLoader = event.loader;
        // loader を差し替え
        // 1. 現在のページをフェードアウト
        // 2. フェードアウト完了後に本来の loader を実行
        event.loader = async () => {
          const elements = Array.from(document.querySelectorAll('main, footer'));
          if (elements.length) {
            // フェードアウトを開始
            elements.forEach((el) => el.classList.add(FADE_OUT));

          // すべての要素の animationend を待つ
          await Promise.all(
            elements.map(
              (el) =>
                new Promise((resolve) => {
                  const onEnd = () => {
                    el.removeEventListener('animationend', onEnd);
                    resolve(null);
                  };
                  el.addEventListener('animationend', onEnd, { once: true });
                })
            )
          );
        }
        // フェードアウト後にコンテンツをロード
        await originalLoader();
      };
    });

    // スワップ後にフェードイン開始
    document.addEventListener('astro:after-swap', () => {
      const elements = document.querySelectorAll('main, footer');
      elements.forEach((el) => {
        el.classList.remove(FADE_OUT);
        el.classList.add(FADE_IN);
        el.addEventListener(
          'animationend',
          () => {
            el.classList.remove(FADE_IN);
          },
          { once: true }
        );
      });
    });
  }
</script>