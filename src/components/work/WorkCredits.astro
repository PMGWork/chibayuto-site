---
interface Props {
  className?: string;
  credits?: {
    title: string;
    name: string;
  }[];
  link?: string;
}

const { className, credits, link } = Astro.props;
---

<div class={`${className ?? ''}`}>
  <div
    class="
      w-full sm:w-auto px-4 py-2
      flex flex-row justify-between items-end gap-4 sm:gap-10
      bg-gray-50 border-gray-200 border rounded-lg
    "
  >
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-10">
      {credits?.map((credit) => (
        <div class="flex flex-col">
          <p class="font-semibold">{credit.title}</p>
          <p class="text-gray-500">{credit.name}</p>
        </div>
      ))}
    </div>
    {link && (
      <div
        class="
          font-semibold p-3 sm:p-4
          border-gray-200 border
          bg-gray-50 hover:bg-gray-200 rounded-lg
          transition cursor-pointer
        "
      >
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
        >
          リンク
        </a>
      </div>
    )}
  </div>
</div>