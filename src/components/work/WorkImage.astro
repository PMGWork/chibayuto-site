---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  className?: string;
  name: string;
  thumbnail?: string;
  image?: ImageMetadata;
}

const { className = '', name, image } = Astro.props;
---

<div class={`w-full ${className}`}>
  {
    image ? (
      <Image
        class="h-auto w-full rounded-lg border border-gray-200"
        src={image}
        alt={name}
        format="avif"
        quality={75}
        priority
      />
    ) : (
      <div class="flex h-64 w-full items-center justify-center rounded-lg bg-gray-200">
        <p class="text-gray-500">画像がありません</p>
      </div>
    )
  }
</div>
