---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  className?: string;
  name: string;
  thumbnail?: string;
  image?: ImageMetadata;
}

const { className = '', name, image } = Astro.props;
---

<div class={`w-full ${className}`}>
  {
    image ? (
      <Image
        class="h-auto w-full rounded-lg border border-gray-200"
        src={image}
        alt={name}
        widths={[240, 540, 720, 1080, 1600]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, 1600px`}
        decoding="async"
        loading="eager"
      />
    ) : (
      <div class="flex h-64 w-full items-center justify-center rounded-lg bg-gray-200">
        <p class="text-gray-500">画像がありません</p>
      </div>
    )
  }
</div>
