---
interface Props {
  className?: string;
  name: string;
  thumbnail?: string;
}

const { className = '', name, thumbnail } = Astro.props;

const imageSrc = typeof thumbnail === 'string' ? thumbnail : undefined;
---

<div class={`w-full ${className}`}>
  {
    imageSrc ? (
      <img
        class="h-auto w-full rounded-lg border border-gray-200"
        src={imageSrc}
        alt={name}
        decoding="async"
        loading="eager"
      />
    ) : (
      <div class="flex h-64 w-full items-center justify-center rounded-lg bg-gray-200">
        <p class="text-gray-500">画像がありません</p>
      </div>
    )
  }
</div>
