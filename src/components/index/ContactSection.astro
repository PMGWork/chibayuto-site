---
// 共通のアイコンスタイル
const iconClass = 'w-5 h-5 text-foreground';

// コンタクト情報
const contacts = [
  {
    name: 'chiba.yuto.2003(@)gmail.com',
    href: 'mailto:chiba.yuto.2003@gmail.com',
    icon: 'email',
    ariaLabel: 'Email',
  },
  {
    name: 'PMGWork',
    href: 'https://x.com/PMGWork',
    icon: 'twitter',
    ariaLabel: 'Twitter',
  },
  {
    name: 'PMGWork',
    href: 'https://github.com/pmgwork',
    icon: 'github',
    ariaLabel: 'GitHub',
  },
];
---

<div class="flex flex-col gap-4">
  <h2 class="text-2xl">各種リンク</h2>
  <div class="flex flex-wrap gap-2">
    {
      contacts.map((contact) => (
        <a
          href={contact.href}
          aria-label={contact.ariaLabel}
          class="hover:border-primary flex items-center gap-2 rounded-full border border-gray-200 p-[14px] text-sm transition-all duration-300 sm:px-4 sm:py-3"
          target={contact.name !== 'Email' ? '_blank' : undefined}
          rel={contact.name !== 'Email' ? 'noopener noreferrer' : undefined}
        >
          <div class="flex-shrink-0">
            {contact.icon === 'email' && (
              <svg
                class={iconClass}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            )}
            {contact.icon === 'twitter' && (
              <svg class={iconClass} fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
              </svg>
            )}
            {contact.icon === 'github' && (
              <svg class={iconClass} fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            )}
          </div>
          <span class="text-foreground hidden sm:inline">{contact.name}</span>
        </a>
      ))
    }
  </div>
</div>
