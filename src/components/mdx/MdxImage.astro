---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt?: string;
  class?: string;
}

const { src, alt = '', class: className } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class={className}
  format="avif"
  quality={75}
  loading="lazy"
  decoding="async"
/>
